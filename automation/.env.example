REPO=yasufumi-nakata/eegflow
# REPO_DIR defaults to the parent of this automation folder.
# REPO_DIR=/path/to/eegflow
# AUTOMATION_DIR defaults to this folder.
# AUTOMATION_DIR=/path/to/eegflow/automation
TARGET_BRANCH=main
ISSUE_LIMIT=50
AI_TIMEOUT_SECONDS=300
# AI_WORKDIR defaults to REPO_DIR when empty.
AI_WORKDIR=
ALLOW_DIRTY=false
# If true, stash pre-existing changes once at startup and restore at the end.
AUTO_STASH_DIRTY=false
# When true, if a run is already in progress, schedule one follow-up run instead of skipping.
QUEUE_ON_BUSY=true
# Max wall-clock time for a single automation run (seconds). Set 0 to disable.
RUN_TIMEOUT_SECONDS=3600
# Grace period before SIGKILL after timeout (seconds).
RUN_TIMEOUT_GRACE_SECONDS=30

# Command that receives the prompt on STDIN.
# Example:
# AI_CMD='your-ai-cli --non-interactive'
AI_CMD=''
# If your AI command prefers a file, resolve-issues.sh sets AI_PROMPT_FILE
# to the prompt path before execution.

# Optional commit co-author line (email required).
# CO_AUTHOR='Your Name <you@example.com>'

# Server settings (server.js reads the same .env).
PORT=3000
# RESOLVE_SCRIPT=/path/to/eegflow/automation/resolve-issues.sh
